@page
@model HoaiNXRazorPages.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Access Denied
                    </h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-4x text-danger"></i>
                    </div>

                    <h4 class="card-title mb-3">You do not have permission to access this resource</h4>
                    <p class="card-text">
                        You don't have the necessary permissions to view the requested page.
                        Please contact your administrator if you believe this is an error.
                    </p>

                    <div class="mt-4">
                        <a asp-page="/Index" class="btn btn-outline-primary me-2">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                        <a asp-page="/Auth/Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        If you believe you should have access, please contact support.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
