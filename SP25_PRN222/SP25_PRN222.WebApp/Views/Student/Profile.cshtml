@model FUBusiness.Entities.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">My Profile</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4">
                            <div class="avatar-placeholder rounded-circle bg-light d-flex align-items-center justify-content-center"
                                 style="width: 120px; height: 120px; margin: 0 auto;">
                                <i class="bi bi-person" style="font-size: 3rem;"></i>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h4>@Model.FullName</h4>
                            <p class="text-muted">
                                Student
                                <span class="badge bg-info ms-2">@Model.Role</span>
                            </p>

                            <hr />

                            <dl class="row">
                                <dt class="col-sm-3">Email</dt>
                                <dd class="col-sm-9">@Model.Email</dd>

                                <dt class="col-sm-3">Joined</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-3">Student ID</dt>
                                <dd class="col-sm-9">@Model.ID</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-3 text-end">
                        <!-- In a future update, add an edit profile functionality -->
                        <a href="#" class="btn btn-primary disabled">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
