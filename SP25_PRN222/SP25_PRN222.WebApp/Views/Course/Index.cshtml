@model IEnumerable<FUBusiness.Entities.Course>
@{
    ViewData["Title"] = "Course Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Course Management</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Course
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col">
                    <h5 class="card-title mb-0">All Courses</h5>
                </div>
                <div class="col-md-4">
                    <input type="text" id="searchInput" class="form-control"
                           placeholder="Search courses...">
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="coursesTable">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Code</th>
                                <th>Category</th>
                                <th>Capacity</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.CourseCode</td>
                                    <td>@item.Category</td>
                                    <td>@item.Capacity</td>
                                    <td>@item.CreatedAt.ToShortDateString()</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.ID"
                                               class="btn btn-sm btn-outline-primary">
                                                Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.ID"
                                               class="btn btn-sm btn-outline-secondary">
                                                Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ID"
                                               class="btn btn-sm btn-outline-danger">
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p class="mb-0">No courses found. Click "Create New Course" to add a course.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#coursesTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Auto dismiss alerts
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}
